<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-12 col-md-8 offset-md-2">
    <h3 class="mb-4 fw-semibold">Create a New Listing</h3>

    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input
          name="listing[title]"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Title should be valid</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          rows="3"
          placeholder="Describe your place"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" class="form-control">
          <option value="" disabled selected>Select a category</option>
          <% for (let cat of categories) { %>
          <option value="<%= cat.key %>"><%= cat.label %></option>
          <% } %>
        </select>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          class="form-control"
          type="file"
          required
        />
      </div>

      <!-- Price + Country -->
      <div class="row">
        <div class="col-md-4 mb-3">
          <label class="form-label">Price</label>
          <input
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="col-md-8 mb-3">
          <label class="form-label">Country</label>
          <input
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label class="form-label">Location</label>
        <input
          name="listing[location]"
          class="form-control"
          placeholder="Mumbai, Maharashtra"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <!-- Button -->
      <button class="btn btn-dark px-4 mt-2 add-btn mb-5">Add</button>
    </form>
  </div>
</div>
